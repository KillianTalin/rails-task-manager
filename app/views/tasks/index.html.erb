<h1>Tasks List</h1>

<%= link_to "Add a new task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <h2><%= task.name %></h2>
      <%= link_to "Show details", task_path(task.id) %>
      <%= link_to "Edit Task", edit_task_path(task.id)%>
      <%= link_to "Delete Task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
